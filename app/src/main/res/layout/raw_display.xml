<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_height="60dp"
        app:strokeColor="#729FC3"
        app:strokeWidth="2sp"
        app:cardCornerRadius="11dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/rawMat"
            android:textColor="#FA754B"
            android:layout_width="10dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginLeft="9dp"
            android:layout_height="wrap_content"
            android:hint="Matricule"/>
        <TextView
            android:id="@+id/rawSurname"
            android:layout_marginLeft="3dp"
            android:textColor="@color/purple_700"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:hint="Surname"/>
        <TextView
            android:id="@+id/rawName"
            android:textColor="@color/purple_700"
            android:layout_marginLeft="3dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:hint="Name"/>
        <TextView
            android:id="@+id/rawPoste"
            android:layout_marginLeft="3dp"
            android:textColor="#BC091E"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:hint="Poste"/>
        <TextView
            android:id="@+id/rawYearStart"
            android:layout_marginLeft="3dp"
            android:layout_width="40dp"
            android:textColor="@color/teal_700"
            android:layout_height="wrap_content"
            android:hint="Year"/>
        <TextView
            android:id="@+id/rawWages"
            android:layout_marginLeft="3dp"
            android:layout_width="70dp"
            android:textColor="#295A2B"
            android:layout_height="wrap_content"
            android:hint="Wages"/>
        <ImageView
            android:id="@+id/rawDelete"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_baseline_cancel_24"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>